# Example environment configuration for local development
# Copy to .env and customize as needed
# NEVER commit actual .env files to git

# Application Environment
# Options: dev, sandbox, audit, prod
APP_ENV=dev

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
GRPC_PORT=9090

# PostgreSQL Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=pandora
DB_PASSWORD=pandora_dev_secret
DB_NAME=pandora_dev
DB_SSLMODE=disable

# JWT Configuration
# Secret must be at least 32 characters long
JWT_SECRET=your-super-secret-jwt-key-at-least-32-chars-long-change-in-production
JWT_ACCESS_TOKEN_EXPIRY=15m
JWT_REFRESH_TOKEN_EXPIRY=168h

# Redis Configuration (for future event publishing)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
