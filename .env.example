# Example environment configuration for local development
# Copy to .env.dev and customize as needed
# NEVER commit actual .env files to git

APP_ENV=dev
APP_NAME=user-service
APP_VERSION=0.1.0

# Server Configuration
HTTP_PORT=8080
GRPC_PORT=9090

# PostgreSQL Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=pandora_dev
POSTGRES_USER=pandora
POSTGRES_PASSWORD=pandora_dev_secret
POSTGRES_SSL_MODE=disable

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# JWT Configuration (VAULT in production)
JWT_ACCESS_SECRET=dev_jwt_access_secret_change_in_production
JWT_REFRESH_SECRET=dev_jwt_refresh_secret_change_in_production
JWT_ACCESS_TTL=15m
JWT_REFRESH_TTL=168h

# Vault Configuration (placeholders)
VAULT_ADDR=http://localhost:8200
VAULT_TOKEN=dev-token
VAULT_SECRET_PATH=secret/data/pandora/user-service

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json

# OpenTelemetry
OTEL_ENABLED=true
OTEL_ENDPOINT=localhost:4318
OTEL_SERVICE_NAME=user-service
OTEL_TRACE_RATIO=1.0
