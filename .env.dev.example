# Development Environment Configuration
# Copy this to .env.dev and update values as needed

APP_ENV=dev

# Server Configuration
SERVER_PORT=8080
SERVER_HOST=localhost
GRPC_PORT=9090

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=pandora_user
DB_PASSWORD=pandora_dev_password
DB_NAME=pandora_dev
DB_SSLMODE=disable

# JWT Configuration
# IMPORTANT: Use a secure random key in production (at least 32 characters)
JWT_SECRET=dev-secret-key-change-this-in-production-min-32-chars
JWT_ACCESS_TOKEN_EXPIRY=15m
JWT_REFRESH_TOKEN_EXPIRY=168h

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
