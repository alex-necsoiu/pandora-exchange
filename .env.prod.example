# Production Environment Configuration
# IMPORTANT: All secrets MUST come from HashiCorp Vault
# Never commit actual secrets to version control

APP_ENV=prod

# Server Configuration
SERVER_PORT=8080
SERVER_HOST=0.0.0.0
GRPC_PORT=9090

# Database Configuration
DB_HOST=<VAULT:secret/prod/db/host>
DB_PORT=5432
DB_USER=<VAULT:secret/prod/db/user>
DB_PASSWORD=<VAULT:secret/prod/db/password>
DB_NAME=pandora_prod
DB_SSLMODE=require

# JWT Configuration
# Secret will be automatically rotated by Vault
JWT_SECRET=<VAULT:secret/prod/jwt/secret>
JWT_ACCESS_TOKEN_EXPIRY=15m
JWT_REFRESH_TOKEN_EXPIRY=168h

# Redis Configuration
REDIS_HOST=<VAULT:secret/prod/redis/host>
REDIS_PORT=6379
REDIS_PASSWORD=<VAULT:secret/prod/redis/password>
REDIS_DB=0
